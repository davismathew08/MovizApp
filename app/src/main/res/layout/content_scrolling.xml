<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.main.movie_details.MovieDetailsScrollingActivity"
    tools:showIn="@layout/activity_movie_details_scrolling">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvMovieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_semibold"
            android:maxLines="2"
            android:textDirection="locale"
            android:text="@string/tvMovieName"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvMovieTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:textDirection="locale"
            android:fontFamily="@font/manrope_medium"
            android:text="@string/tvMovieDescription"
            android:textAlignment="textStart"
            android:textColor="@color/dark_gray1"
            android:textSize="@dimen/text_size_14sp"
            android:layout_marginTop="@dimen/margin_10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMovieName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintSubOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMovieTag"
            android:layout_marginTop="@dimen/margin_20dp">

            <TextView
                android:id="@+id/tvReleaseDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_medium"
                android:text="@string/tvReleaseDateText"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray1"
                android:textSize="@dimen/text_size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvReleaseDateValue"
                app:layout_constraintStart_toStartOf="@+id/tvReleaseDateValue"
                android:layout_marginBottom="@dimen/margin_20dp"

                />

            <TextView
                android:id="@+id/tvReleaseDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_semibold"
                android:maxLines="2"
                android:text="@string/tvReleaseDateValue"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                app:layout_constraintEnd_toStartOf="@+id/ivLine"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_20dp"/>

            <View
                android:id="@+id/ivLine"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/lightGray"
                app:layout_constraintEnd_toStartOf="@+id/tvGeneresValue"
                app:layout_constraintStart_toEndOf="@+id/tvReleaseDateValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                />
            <TextView
                android:id="@+id/tvGeneresText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_medium"
                android:text="@string/tvGeneresText"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray1"
                android:textSize="@dimen/text_size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvGeneresValue"
                app:layout_constraintStart_toStartOf="@+id/tvGeneresValue"
                android:layout_marginBottom="@dimen/margin_20dp"
                />
            <TextView
                android:id="@+id/tvGeneresValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_semibold"
                android:maxLines="2"
                android:text="@string/tvGeneresValue"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivLine"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:drawableEnd="@drawable/ic_library_books"
                android:drawablePadding="@dimen/margin_10dp"
                android:background="?selectableItemBackground"
                android:clickable="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tvMovieDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:textDirection="locale"
            android:fontFamily="@font/manrope_medium"
            android:text="@string/tvMovieDescription"
            android:textAlignment="textStart"
            android:textColor="@color/dark_gray1"
            android:textSize="@dimen/text_size_14sp"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintSubOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <TextView
            android:id="@+id/tvMoviePosterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_semibold"
            android:maxLines="2"
            android:textDirection="locale"
            android:text="@string/tvMoviePosterTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            android:paddingTop="@dimen/margin_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMovieDescription"
            />
        <com.example.movizapp.utils.RoundRectCornerImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="fitXY"
            android:id="@+id/ivPoster"
            app:srcCompat="@drawable/ic_image_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/tvMoviePosterTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>